<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robmillaci.countdowntimer">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.robmillaci.SimpleHIITtimer.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity -->
        <!-- android:name=".com.example.robmillaci.SimpleHIITtimer.FragmentCountdown" -->
        <!-- android:label="@string/app_name" /> -->
        <activity
            android:name="com.example.robmillaci.SimpleHIITtimer.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/preferenceTheme"
            android:parentActivityName="com.example.robmillaci.SimpleHIITtimer.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.robmillaci.SimpleHIITtimer.MainActivity" />
        </activity>
    </application>

</manifest>